apps-$(CONFIG_APP_HELLO_IDRIS_2) += hello-idris-2

this_dir := $(dir $(lastword $(MAKEFILE_LIST)))
include $(this_dir)/src/Kbuild

# Libraries needed by the app
hello-idris-2-y = \
    common \
    libsel4 \
    libmuslc \
    libsel4muslcsys \
    libsel4platsupport \
    libsel4-idris-rts \
    libutils \
    libsel4utils \
    libsel4debug \
    $(BUILD_BASE)/hello-idris-2/hello-idris-2.c

# App
hello-idris-2: \
    kernel_elf \
    $(hello-idris-2-y)
